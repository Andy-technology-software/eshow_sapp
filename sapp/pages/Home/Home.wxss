/* Home.wxss */
.topView {
  position: absolute;
  width: 80%;
  left: 10%;
  right: 10%;
  bottom: 5%;
  top: 5%;
  border-radius: 12px;
  background-color: black;
}

.topImage{
  width: 100%;
  height: 160px;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}

.textView{
  flex-direction: column;
  margin-top: 10px;

}

.titleView{
  background-color: red;
}

.title{
  color: white;
  font-size: 16px;
}

.timeView{
  flex-direction: row
}

.timeImage{
  width: 20px;
  height: 20px;
}

.timeText{
  color: white;
  font-size: 14px;
}

.desView{
  margin-left: 10px;
  margin-right: 10px;
}
.desText{
  color: white;
  font-size: 14px;
  margin-left: 10px;
}