/* Home.wxss */
.container {
    background-color: white;
}

.topView {
  position: absolute;
  width: 80%;
  left: 10%;
  right: 10%;
  bottom: 5%;
  top: 5%;
  border-radius: 12px;
  background-color: rgb(62, 62, 68);
}

.topImage{
  width: 100%;
  height: 160px;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}

.textView{
  display: flex;
  flex-direction: column;
  margin-top: 10px;

}

.titleView{
  align-self: center;
}

.title{
  color: white;
  font-size: 16px;
}

.timeView{
  flex-direction: row;
  margin-left: 10px;
  margin-top: 5px;
}

.timeImage{
  width: 12px;
  height: 12px;
}

.timeText{
  color: white;
  font-size: 13px;
  margin-left: 5px;
}

.desView{
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 5px;
}

.clickView{
  margin-top: 30px;
  display: flex;
  flex-direction: column;
}

.clickImage{
  width: 40px;
  height: 40px;
  align-self: center;
}

