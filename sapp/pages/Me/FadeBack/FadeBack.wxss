.container {
    display: flex;
    flex-direction: column;
    background-color: white;
    margin-top: 20px;
    margin-left: 5%;
    width: 90%;
}

.titleView{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title{
    font-size: 14px;
}

.leixingView{
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}

.leixingTitle{
    font-size: 14px;
}

.leixingLineView{
    margin-top: 10px;
    width: 100%;
    height: 0.5px;
    background-color: lightgray;
}

.leixingBtnView{
    margin-top: 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.leixingBtn{
    font-size: 14px;
}

.contentView{
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}

.contentTitle{
    font-size: 14px;
}

.contentDesView{
    margin-top: 5px;
    background-color: rgb(238,238,238);
}

.lianxiStyle{
    padding: 10px;
}

.sendBtn{
    margin-top: 60px;
    margin-bottom: 30px;
    background-color: rgb(153,153,153);
    color: white;
    width: 70%;
    font-size: 14px;
    border-radius: 12px;
}