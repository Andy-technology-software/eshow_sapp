.container{
    background-color: rgb(62, 62, 68);
    margin-left: 20px;
    margin-top: 20px;
    border-radius: 12px;
}


/*交流区*/
.outView{
    margin-top: 20px;
    margin-left: 10px;
    margin-right: 10px;
}

.cell{
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}

.section0{
    display: flex;
    flex-direction: row;
}

.rightView{
    margin-left: 5px;
    display: flex;
    flex-direction: column;
}

.nametitle{
    color: white;
    font-size: 16px;
    margin-bottom: 5px;
}

.sendContent{
    color: rgb(175,174,174);
    font-size: 14px;
    margin-bottom: 10px;
    line-height: 16px;
}

.sendImagesView{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    /*justify-content: space-around;*/
    margin-bottom: 10px;
}

.sendImages{
     width:76px;
     height:76px;
     margin-right: 10px;
     margin-bottom: 10px;
}

.timeAndTalkView{
    display: flex;
    flex-direction: row;
    justify-content: space-between;    
}

.timeType{
    font-size: 12px;
    color: rgb(175,174,174); 
}

.deleView{
    display: flex;
    flex-direction: row;
}

.deleText{
    color: red;
    font-size: 12px;
    margin-right: 20px;
}

.bottLine{
    margin-top: 20px;
    width: 100%;
    height: 2px;
    background-color: rgb(57,57,62);
}


/***发布按钮***/
.searchView{
    position: absolute;
    bottom: 30px;
    right: 30px;
}

.searchImage{
    width: 40px;
