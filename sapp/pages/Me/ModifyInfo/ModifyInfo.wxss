.container{
    display: flex;
    flex-direction: column;
    background-color: white;
}

.nameView{
    display: flex;
    flex-direction: column;
    height: 45.5px;
    width: 100%;
}

.topView{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.leftTitle{
    font-size: 16px;
    margin-left: 10px;
    margin-right: 10px;
    width: 90px;
}

.inputStyle{
    font-size: 14px;
    height: 45px;
    margin-right: 10px;
    color: rgb(153,153,153)
}

.lineView{
    width: 100%;
    height: 0.5px;
    background-color: rgb(221,221,221);
}

.desView{
    display: flex;
    flex-direction: column;
    height: 100px;
    width: 100%;
}

.topdesView{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.leftdesTitle{
    font-size: 16px;
    margin-left: 10px;
    margin-right: 10px;
    width: 90px;
}

.desStyle{
    font-size: 14px;
    height: 80px;
    margin-right: 10px;
    margin-top: 10px;
    margin-bottom: 10px;
    color: rgb(153,153,153)
}

.sendBtn{
    margin-top: 90px;
    background-color: rgb(53,53,59);
    color: white;
    width: 70%;
    font-size: 14px;
    border-radius: 12px;
}